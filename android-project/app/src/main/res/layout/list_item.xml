    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewDisplayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instruction Text"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"/>
</LinearLayout>
